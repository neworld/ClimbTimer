<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import views.ImageSliderView?>

<BorderPane style="-fx-background-color: #000;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lt.neworld.climbtimer.controllers.TimerController">
   <center>
      <Label fx:id="clock" ellipsisString="" text="00:00:00" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" BorderPane.alignment="CENTER">
         <font>
            <Font name="Monospaced Bold" size="240.0" />
         </font>
      </Label>
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <Label fx:id="title" text="ClimbTimer" textAlignment="CENTER" textFill="WHITE" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font size="80.0" />
               </font>
               <padding>
                  <Insets left="50.0" right="50.0" />
               </padding>
            </Label>
         </center>
         <left>
            <ImageSliderView fx:id="logoLeft" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <ImageSliderView fx:id="logoRight" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
</BorderPane>
